/* pages/page/pagetableone/pagetableone.wxss */
page{
  margin-bottom: 100rpx;
}
/* 轮播图 */
.slider{
    width: 100%;
    height: 500rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
/* 详情 */
.pagesdetails{
  background-color: #fff;
  padding: 20rpx;
}
.pagessize{
  font-size: 30rpx;
  color: #9e9898;
}
.pagesdetails image{
   width: 100%;
   height: 600rpx;
}
/* 弹出框 */
.pagescircle{
  z-index: 2;
  position: fixed;
  bottom: 0;
  width:100%;
  height: 500rpx;
  background: #fff;
  border-top: 1rpx solid #9e9898;
}
.pagescircle .pagespic{
   width: 200rpx;
   height: 200rpx;
   position: absolute;
   left: 40rpx;
   top: -60rpx;
   border-radius: 10%;
}
.pagescircle  .pagespic-right{
   width: 80rpx;
   height: 80rpx;
   position: absolute;
   right: 0;
   top: 0;
}
.pagescircle .row{
  border-bottom:1rpx solid #9e9898; 
  margin: 20rpx;
  padding-bottom: 46rpx;
}
.column {
  display: block;
 margin-left: 260rpx;
  overflow: hidden;
  text-overflow:ellipsis;/*文字隐藏后添加省略号 */
  white-space:nowrap; 
}
.car-btn{
  float: right;
}
.car-btn text{
  display:inline-block;
  border: 2px solid #ccc;
  margin-right: -2px;
  line-height: 80rpx;
  text-align: center;
  width: 93rpx;
  height: 86rpx;
 
}
/* tabbar */
.tabbar{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  position: fixed;
  bottom:0;
}
.button-green {
  background-color: #4caf50; 
}
.button-red {
  background-color: #f44336; 
}
.tabbar image{
   width: 70rpx;
   height: 50rpx;
   margin: 20rpx 40rpx;
}
.tabbar view{
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
.tabbar button{
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}