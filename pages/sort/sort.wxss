/* pages/sort/sort.wxss */
/* 主盒子 */
.sortmain{
  position: relative;
  background-color: #fff;
  width: 100%;
  height: 100%;
  color: #939393;
}
/* 左侧盒子 */
.sortmain .sort_left{
   display: inline-block;
   width: 25%;
   height: 1000rpx;
   background-color: #f5f5f5;
   text-align: center;
}
.sortmain .sort_left view{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #dedede;
}
.sortmain .sort_left view.active{
  background-color: #fff;
  color: #6bc2e2;
}
/* 右侧盒子 */
.sortmain .sort_right{
  position: absolute;
  width: 75%;
  top: 0;
  right: 0;
  flex: 1;
  height: 1000rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.sortmain .sort_right .sort_rightview{
   float: left;
   width: 33.3%;
   height: 210rpx;
   text-align: center;
}
.sortmain .sort_right .sort_rightview image{
  width: 160rpx;
  height: 150rpx;
}
.sortmain .sort_right .sort_rightview  text{
  display: block;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;/*文字隐藏后添加省略号 */
  white-space:nowrap; 
}
