/* pages/collect/collect.wxss */
.coll-box{
  width: 100%;
}
.coll-box .coll-li{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
  margin-bottom: 16rpx;
}
.coll-box .coll-li image{
  width: 200rpx;
  height: 200rpx;
}
.coll-text{
  margin-left: 30rpx;
  position: relative;
}
.coll-text text{
  width: 500rpx;
   margin-top: 20rpx;
  display:block;
  overflow: hidden;
  text-overflow:ellipsis;/*文字隐藏后添加省略号 */
  white-space:nowrap; 
}
.coll-btn{
   width: 100rpx;
   height: 100rpx;
  background: -webkit-linear-gradient(top,rgba(250,250,250,0),#de4a4a);
   color: #fff;
   border-radius: 50%;
   position: absolute;
   right: 0;
   bottom: 0;
}